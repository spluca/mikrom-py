# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/database_name
DATABASE_ECHO=False

# Security Configuration
# Generate a secret key with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Mikrom API
VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# ============================================
# VM Management
# ============================================

# Firecracker deployment
# Docker: Use container path /firecracker-deploy (matches mounted volume in docker-compose.yml)
# Local dev: Use absolute path like /home/user/path/to/firecracker-deploy
FIRECRACKER_DEPLOY_PATH=/firecracker-deploy
FIRECRACKER_DEFAULT_HOST=

# ============================================
# Celery Background Tasks
# ============================================

# Redis Configuration (Broker & Backend)
REDIS_URL=redis://localhost:6379

# Celery Queue Configuration
CELERY_QUEUE_NAME=mikrom:queue

# ============================================
# Celery Worker Configuration
# ============================================

# Worker Pool Type
# - prefork: Most robust for blocking I/O operations (SSH, subprocess). Recommended for production.
#   Uses separate processes for each worker. Best for CPU-intensive and blocking operations.
# - threads: Good for I/O-bound tasks, lighter memory footprint than prefork.
# - gevent: High concurrency but NOT suitable for blocking operations (causes health check failures).
# - solo: Single worker, for debugging only.
CELERY_WORKER_POOL=prefork

# Number of Worker Processes/Threads
# For prefork: Recommended 2-4x CPU cores (typically 4-8 workers)
# For threads: Can be higher (10-20)
# For gevent: Much higher (50-100)
CELERY_WORKER_CONCURRENCY=4

# Task Time Limits (seconds)
# Soft limit: Worker receives SoftTimeLimitExceeded exception, can cleanup gracefully
# Hard limit: Worker process is forcefully killed (SIGKILL)
CELERY_TASK_SOFT_TIME_LIMIT=180
CELERY_TASK_HARD_TIME_LIMIT=240

# ============================================
# Ansible Configuration
# ============================================

# Ansible playbook execution timeout (seconds)
# Maximum time allowed for a single playbook run (VM creation, deletion, etc.)
# Should be less than CELERY_TASK_SOFT_TIME_LIMIT
ANSIBLE_PLAYBOOK_TIMEOUT=120

# SSH connection timeout (seconds)
# Maximum time to wait for SSH connection to Firecracker host
ANSIBLE_SSH_TIMEOUT=30

# ============================================
# Flower Monitoring UI Configuration
# ============================================

# Access: http://localhost:5555
# Default credentials: admin:changeme (CHANGE IN PRODUCTION!)
FLOWER_BASIC_AUTH=admin:changeme
FLOWER_PORT=5555
